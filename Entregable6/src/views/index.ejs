<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <h1 class="display-1">Lista de Productos</h1>
      <div class="container">
        <h1 class="display-1">Agregar Producto</h1>
        <form class="mt-4" action="/" method="POST">
          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label"
              >Nombre producto</label
            >
            <input
              type="text"
              class="form-control"
              id="nombreProducto"
              name="nombreProducto"
            />
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label"
              >Precio producto</label
            >
            <input
              type="text"
              class="form-control"
              id="precioProducto"
              name="precioProducto"
            />
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Stock</label>
            <input
              type="text"
              class="form-control"
              id="stockProducto"
              name="stockProducto"
            />
          </div>
          <button type="submit" class="btn btn-outline-dark mt-4">
            Enviar
          </button>
          <a href="/" class="btn btn-outline-dark mt-4">Cancelar</a>
        </form>
      </div>

      <table class="table table-dark table-striped text-center mt-4">
        <thead>
          <tr>
            <th scope="col">Codigo</th>
            <th scope="col">Nombre</th>
            <th scope="col">Precio</th>
            <th scope="col">Stock</th>
          </tr>
        </thead>
        <tbody>
          <% if(productos.length === 0) { %>
          <td colspan="4"><p class="display-6">no hay productos</p></td>
          <%}else{ productos.forEach(element => { %>
          <tr>
            <th scope="row"><%=element.id%></th>
            <td><%=element.nombreProducto%></td>
            <td><%=element.precioProducto%></td>
            <td><%=element.stockProducto%></td>
          </tr>
          <% }) } %>
        </tbody>
      </table>
    </div>
    <div class="container">
      <h1>Chat</h1>
      <p>Email usuario</p>
      <input type="text" name="info" id="email" class="form-control mt-4 mb-4" />
      <div
        class="mb-0"
        style="height: 400px; background-color: rgba(62, 62, 62, 0.1)"
      >
        <ul class="list-group" id="lista-chat">
          <li class="list-group-item m-1">An item</li>
        </ul>
      </div>
      <form class="mt-0 input-group mb-3" id="formulario">
        <input type="text" name="info" id="info" class="form-control mt-4" />
        <input
          type="submit"
          value="INGRESAR"
          class="btn btn-outline-dark mt-4"
        />
      </form>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->
    <script src="/socket.io/socket.io.js"></script>
    <script>
      const socketClient = io();

      const formulario = document.getElementById("formulario");
      const input = document.getElementById("info");
      const inputEmail = document.getElementById("email");
      const list = document.getElementById("lista-chat");
      formulario.addEventListener("submit", (e) => {
        e.preventDefault();
        console.log("hola mundo");
        if (input.value) {
          let data = {email: inputEmail.value, msj: input.value}
          socketClient.emit("chat", data);
          input.value = "";
        }
      });

      socketClient.on("chat", (msj) => {
        let item = document.createElement("li");
        item.innerHTML = `<li class="list-group-item m-1">${msj.email} [${new Date().getHours()} : ${new Date().getMinutes()} : ${new Date().getSeconds()}]: ${msj.msj}</li>`;
        list.appendChild(item);
      });
    </script>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
